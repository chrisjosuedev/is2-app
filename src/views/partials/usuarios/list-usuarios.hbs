<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-secondary">Listado de Usuarios</h6>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataUsuarios" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Nombre Empleado</th>
                    <th> Email </th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Username</th>
                    <th>Nombre Empleado</th>
                    <th> Email</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                {{#each usuario}}
                <tr>
                    <td> {{USERNAME}} </td>
                    <td> {{NOMBRE_EMPLEADO}} </td>
                    <td> {{EMAIL_USER}} </td>
                    <td> {{DESC_ROL}} </td>
                    <td> {{#if ESTATUS}}
                         ACTIVO
                         {{else}}
                         INACTIVO
                         {{/if}}    
                    </td>
                    <td class="text-center">
                        <button class="btn btn-primary editUsuario" data-toggle="modal" data-target="#editUsuario"
                            data-usuario="{{USERNAME}}">
                            <i class="fas fa-pen"></i>
                        </button>
                        <button id="{{USERNAME}}" class="btn btn-warning delete-user mt-2">
                            <i class="fas fa-ban"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>