<!-- Modal HTML -->
<div id="newUsuario" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO USUARIO</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger d-none alert-users" role="alert" id="alert">
                    Alerta Simple
                </div>

                <form action="/config/usuarios/new" method="post" id="users_form">
                    <label> Datos Usuario </label>

                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <input type="text" id="idEmp" class="form-control" placeholder="Identidad" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <button type="button" id="bEmp" class="btn btn-success" style="width: 4.375rem;">
                                <i class=" fas fa-search"></i>
                            </button>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            {{!-- Hidden --}}
                            <input type="text" id="codEmp" class="form-control" hidden name="id_empleado">
                        </div>
                        <div class="form-group col-md-12">
                            <input type="text" id="nameEmp" class="form-control" name="name_emp"
                                placeholder="Nombre Empleado" disabled>
                        </div>
                    </div>

                    <div class="form-group">

                        <input type="text" id="user" class="form-control" name="username" placeholder="Username"
                            maxlength="60" autofocus required>
                        <div id="msg-valid" class="valid-feedback">
                            Username disponible.
                        </div>

                    </div>

                    <div class="form-group">
                        <input type="email" class="form-control" name="email_user" placeholder="Email" maxlength="45"
                            required>
                    </div>

                    <label> Seleccionar Rol del Usuario </label>
                    <div class="form-group">
                        <select id="rol-selected" name="id_rol" class="custom-select rol_selected" required>
                        </select>

                    </div>
                    <div class="mt-4">
                        <div class="progress d-none" id="loading-invoice">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                                role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                                style="width: 100%"></div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt-4 float-right" id="saveUsuario" disabled>
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#loading-invoice").addClass("d-none")
    $("#users_form").submit(function(e) {
        $("#loading-invoice").removeClass("d-none");
    })
</script>