<div class="modal fade" id="editProveedor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar Proveedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" method="post" id="edit-proveedor" name="edit-proveedor">

                    <label> Datos de Proveedor </label>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <input type="text" class="form-control" id="id_proveedor" name="rtn_proveedor"
                                placeholder="R.T.N." disabled>
                        </div>
                        <div class="form-group col-lg-12">
                            <input type="text" class="form-control" id="nombre_proveedor" name="nombre_proveedor"
                                placeholder="Proveedor" maxlength="50" required>
                        </div>
                        <div class="form-group col-lg-6">
                            <input type="email" class="form-control" id="email_proveedor" name="email_proveedor"
                                placeholder="Email" maxlength="45" required>
                        </div>
                        <div class="form-group col-lg-6">
                            <input class="form-control phone" id="celular-pro" type="tel" name="phone" required />
                            <div class="msg-cel-valid valid-feedback"></div>
                        </div>

                    </div>



                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>