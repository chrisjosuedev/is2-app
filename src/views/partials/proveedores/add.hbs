<!-- Modal HTML -->
<div id="newProveedor" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AGREGAR NUEVO PROVEEDOR</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/proveedores/new" method="post" id="proveedores_form">
                    <label> Datos de Proveedor </label>
                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <input type="text" class="form-control" name="rtn_proveedor" placeholder="R.T.N." id="rtn"
                                autofocus maxlength="14" required>
                            <div id="msg-valid" class="valid-feedback"></div>
                        </div>
                        <div class="form-group col-lg-12">
                            <input type="text" class="form-control" name="nombre_proveedor" placeholder="Proveedor"
                                maxlength="50" required>
                        </div>
                        <div class="form-group col-lg-6">
                            <input type="email" class="form-control" name="email_proveedor" placeholder="Email"
                                maxlength="45" required>
                        </div>
                        <div class="form-group col-lg-6">
                            <input class="form-control phone" id="phone-pro" type="tel" name="phone" required />
                            <div class="msg-cel-valid valid-feedback"></div>
                        </div>
                    </div>



                    <button type="submit" class="btn btn-primary mt-4 float-right">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>